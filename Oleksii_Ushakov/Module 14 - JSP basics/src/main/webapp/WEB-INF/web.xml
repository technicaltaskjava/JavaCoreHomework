<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <!--<welcome-file>login.jsp</welcome-file>-->
        <welcome-file>table.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>PredicationPage</servlet-name>
        <jsp-file>/predication.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>PredicationPage</servlet-name>
        <url-pattern>/predication</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PredicationTablePage</servlet-name>
        <jsp-file>/table.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>PredicationTablePage</servlet-name>
        <url-pattern>/predication_table</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <jsp-file>/logout.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationPage</servlet-name>
        <jsp-file>/registration.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistrationPage</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>dao.exception.NoSuchUserException</exception-type>
        <location>/errors/noSuchLogin.jsp</location>
    </error-page>

    <error-page>
        <exception-type>dao.exception.AddUserException</exception-type>
        <location>/errors/userExist.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/errors/error.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/errors/pageNotFound.jsp</location>
    </error-page>
</web-app>